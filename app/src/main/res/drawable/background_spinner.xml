<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:angle="90"
                        android:startColor="?attr/colorSecondaryVariant"
                        android:centerColor="?attr/colorOnPrimary"
                        android:endColor="?attr/colorOnPrimary"
                        android:type="linear"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/color_app"/>
                    <corners
                        android:radius="4dp"/>
                    <padding
                        android:bottom="6dp"
                        android:left="8dp"
                        android:right="8dp"
                        android:top="6dp"/>
                </shape>
            </item>
            <item
                android:drawable="@drawable/ic_arrow_drop_down"
                android:gravity="center_vertical|right"/>
        </layer-list>
    </item>
</selector>