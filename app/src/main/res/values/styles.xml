<resources>
    <style name="ActionBarNight">
        <item name="titleTextColor">@color/color_app_night_light</item>
        <item name="android:background">@color/color_app_night</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/color_app</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tabStyleApp">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="tabTextColor">@color/color_app_light</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="TabStyleAppNight">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="tabTextColor">@color/color_app_night_light</item>
        <item name="tabSelectedTextColor">@color/color_app</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabIndicatorColor">@color/color_app</item>
        <item name="android:elevation">5dp</item>
    </style>
</resources>